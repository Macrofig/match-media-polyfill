{
  "name": "can-interchange",
  "version": "0.0.2",
  "description": "A clone of Foundation's interchange component using CanJS's can.view.attr.",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "lint": "xo",
    "test": "npm run lint && mocha",
    "build": "node ./steal-build.js",
    "develop": "http-server -p 3000 -c-1 -o",
    "docs": "documentjs",
    "prepublish": "npm run build",
    "publish": "git push origin --tags",
    "release:patch": "npm version patch && npm publish",
    "release:minor": "npm version minor && npm publish",
    "release:major": "npm version major && npm publish"
  },
  "keywords": [
    "media",
    "query",
    "match",
    "interchange"
  ],
  "author": "Juan Orozco <hi@juanorozco.com> (http://juanorozco.com)",
  "license": "ISC",
  "devDependencies": {
    "can": "^2.3.19",
    "chai": "^3.5.0",
    "debug": "^2.2.0",
    "documentjs": "^0.4.2",
    "mocha": "^2.4.5",
    "steal": "^0.13.2",
    "steal-mocha": "0.0.3",
    "steal-tools": "^0.13.3",
    "testee": "^0.2.5",
    "xo": "^0.12.1"
  },
  "system": {
    "npmIgnore": [
      "chai",
      "debug",
      "documentjs",
      "mocha",
      "steal",
      "steal-tools",
      "testee",
      "xo"
    ],
    "npmAlgorithm": "flat",
    "paths": {
      "mocha": "node_modules/mocha/mocha.js",
      "chai": "node_modules/chai/chai.js"
    },
    "meta": {
      "mocha": {
        "format": "global",
        "exports": "mocha"
      },
      "chai": {
        "format": "global",
        "exports": "chai"
      }
    }
  },
  "xo": {
    "envs": [
      "node",
      "mocha"
    ],
    "rules": {
      "no-lonely-if": 0,
      "no-else-return": 0,
      "spaced-comment": 0,
      "no-warning-comments": 0
    },
    "space": 4,
    "globals": [
      "steal",
      "chai",
      "matchMedia"
    ],
    "ignore": [
      "node_modules/**",
      "dist/**",
      "docs/**"
    ]
  }
}
